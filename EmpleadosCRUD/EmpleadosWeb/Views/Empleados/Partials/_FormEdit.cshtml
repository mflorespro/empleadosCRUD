
@model EmpleadosWeb.Models.Empleado

<form id="formEditarEmpleado" x-ref="formEditar" @@submit.prevent="guardarEmpleado">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            <label asp-for="Nombre" class="block text-sm font-medium text-gray-700">Nombre</label>
            <input asp-for="Nombre" class="mt-1 block w-full border border-gray-300 rounded-md p-2" />
            <span asp-validation-for="Nombre" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <label asp-for="Apellido" class="block text-sm font-medium text-gray-700">Apellido</label>
            <input asp-for="Apellido" class="mt-1 block w-full border border-gray-300 rounded-md p-2" />
            <span asp-validation-for="Apellido" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <label asp-for="Edad" class="block text-sm font-medium text-gray-700">Edad</label>
            <input asp-for="Edad" type="number" class="mt-1 block w-full border border-gray-300 rounded-md p-2" />
            <span asp-validation-for="Edad" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <label asp-for="Correo" class="block text-sm font-medium text-gray-700">Correo</label>
            <input asp-for="Correo" type="email" class="mt-1 block w-full border border-gray-300 rounded-md p-2" />
            <span asp-validation-for="Correo" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <label asp-for="Departamento" class="block text-sm font-medium text-gray-700">Departamento</label>
            <input asp-for="Departamento" class="mt-1 block w-full border border-gray-300 rounded-md p-2" />
            <span asp-validation-for="Departamento" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <label asp-for="Puesto" class="block text-sm font-medium text-gray-700">Puesto</label>
            <input asp-for="Puesto" class="mt-1 block w-full border border-gray-300 rounded-md p-2" />
            <span asp-validation-for="Puesto" class="text-red-500 text-sm"></span>
        </div>
        <div class="md:col-span-2">
            <label asp-for="Salario" class="block text-sm font-medium text-gray-700">Salario</label>
            <input asp-for="Salario" type="number" step="0.01" class="mt-1 block w-full border border-gray-300 rounded-md p-2" />
            <span asp-validation-for="Salario" class="text-red-500 text-sm"></span>
        </div>
    </div>

    <div class="mt-6 flex justify-end space-x-2">
        <button type="button" @@click="open = false" class="px-4 py-2 bg-gray-300 rounded">Cancelar</button>
        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded">Guardar</button>
    </div>
</form>
